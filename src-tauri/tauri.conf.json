{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Klippy",
  "version": "0.1.0",
  "identifier": "com.klippy.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Klippy",
        "width": 600,
        "height": 620,
        "resizable": true,
        "maximizable": false,
        "minimizable": true,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png"],
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "12.0"
    }
  }
}
